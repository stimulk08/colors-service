{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",

    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",

    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "paths": {
      "@apps/*": ["src/apps/*"],
      "@apps": ["src/apps/index"],
      "@core/*": ["src/core/*"],
      "@core": ["src/core/index"],
      "@libs/*": ["src/libs/*"],
      "@libs": ["src/libs/index"],
      "@test/*": ["src/test/*"],
      "@test": ["src/test/index"]
    }
  }
}
